  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://paes-inteligente.app/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "lang": "es-CL",
  "dir": "ltr",
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+paes",
      "url": "/?handler=paes&url=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/handle-file",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"],
        "application/pdf": [".pdf"]
      }
    }
  ],
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": [
            "image/*",
            "application/pdf",
            "text/plain"
          ]
        }
      ]
    }
  },
  
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  
  "handle_links": "preferred"
}
